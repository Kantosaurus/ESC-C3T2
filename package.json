{
  "name": "esc-c3t2",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node ./scripts/dev.js",
    "dev-core": "npm run dev --workspace=@esc-c3t2/core",
    "dev-backend": "npm run dev --workspace=@esc-c3t2/backend",
    "dev-frontend": "npm run dev --workspace=@esc-c3t2/frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test:run --workspaces --if-present",
    "coverage": "npm run coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces",
    "prepare": "husky",
    "migrate": "node --env-file=.env ./scripts/migrate.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "postgres-migrations": "^5.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
